{
	"scripts": {
		"start": "node ./server/bin",
		"dev": "npx nodemon ./server/bin",
		"debug": "DEBUG=* npx nodemon ./server/bin",
		"up": "npm-check -u && npm audit fix",
		"lint": "npm-run-all \"lint:*\"",
		"lint:js": "eslint .",
		"lint:fix": "eslint --fix .",
		"lint:prettier": "prettier --write .",
		"release": "bumpp -r --all --commit=\"release: %s\" --tag=\"%s\"",
		"reset": "git reset --hard && git clean -fd "
	},

	"devDependencies": {
		"bumpp": "",
		"eslint": "",
		"eslint-config-airbnb": "",
		"eslint-config-prettier": "",
		"nodemon": "",
		"npm-check": "",
		"npm-run-all": "",
		"prettier": ""
	},

	"dependencies": {
		"axios": "",
		"body-parser": "",
		"bootstrap": "",
		"bootstrap-icons": "",
		"connect-ensure-login": "",
		"connect-sqlite3": "",
		"cookie-parser": "",
		"cookie-session": "",
		"dotenv": "",
		"debug": "",
		"ejs": "",
		"express": "",
		"express-session": "",
		"express-validator": "",
		"express-rate-limit": "",
		"fs-extra": "",
		"http-errors": "",
		"helmet": "",
		"morgan": "",
		"mysql2": "",
		"passport": "",
		"passport-local": "",
		"pluralize": "",
		"pug": "",
		"sequelize": "",
		"sqlite3": "",
		"validator": "",
		"tot_init": ""
	},

	"eslintConfig": {
		"root": true,
		"env": {
			"browser": true,
			"commonjs": true,
			"es2023": true,
			"node": true
		},
		"extends": ["eslint:recommended", "airbnb", "prettier"],
		"parserOptions": {
			"ecmaVersion": "latest"
		},
		"rules": {
			"no-console": 0
		}
	},

	"prettier": {
		"printWidth": 80,
		"useTabs": true,
		"tabWidth": 2,
		"trailingComma": "es5",
		"singleAttributePerLine": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"semi": true
	},

	"nodemonConfig": {
		"watch": ".",
		"ext": ".**",
		"ignore": []
	},

	"gitIgnoreConfig": "https://www.toptal.com/developers/gitignore/api/windows,linux,macos,visualstudiocode,database,react,reactnative,node"
}
