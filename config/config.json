{
	"scripts": {
		"start": "node ./server/bin",
		"dev": "npx nodemon ./server/bin",
		"debug": "DEBUG=* npx nodemon ./server/bin",
		"up": "npm-check -u && npm audit fix",
		"lint": "npm-run-all \"lint:*\"",
		"lint:js": "eslint .",
		"lint:fix": "eslint --fix .",
		"lint:prettier": "prettier --write .",
		"release": "bumpp -r --all --commit=\"release: %s\" --tag=\"%s\"",
		"reset": "git reset --hard && git clean -fd "
	},

	"devDependencies": {
		"bumpp": "x.x.x",
		"eslint": "x.x.x",
		"eslint-config-airbnb": "x.x.x",
		"eslint-config-prettier": "x.x.x",
		"nodemon": "x.x.x",
		"npm-check": "x.x.x",
		"npm-run-all": "x.x.x",
		"prettier": "x.x.x"
	},

	"dependencies": {
		"axios": "x.x.x",
		"body-parser": "x.x.x",
		"bootstrap": "x.x.x",
		"bootstrap-icons": "x.x.x",
		"connect-ensure-login": "x.x.x",
		"connect-sqlite3": "x.x.x",
		"cookie-parser": "x.x.x",
		"cookie-session": "x.x.x",
		"dotenv": "x.x.x",
		"debug": "x.x.x",
		"ejs": "x.x.x",
		"express": "x.x.x",
		"express-session": "x.x.x",
		"express-validator": "x.x.x",
		"express-rate-limit": "x.x.x",
		"fs-extra": "x.x.x",
		"http-errors": "x.x.x",
		"helmet": "x.x.x",
		"morgan": "x.x.x",
		"mysql2": "x.x.x",
		"passport": "x.x.x",
		"passport-local": "x.x.x",
		"pluralize": "x.x.x",
		"pug": "x.x.x",
		"sequelize": "x.x.x",
		"sqlite3": "x.x.x",
		"validator": "x.x.x",
		"tot_init": "x.x.x"
	},

	"eslintConfig": {
		"root": true,
		"env": {
			"browser": true,
			"commonjs": true,
			"es2023": true,
			"node": true
		},
		"extends": ["eslint:recommended", "airbnb", "prettier"],
		"parserOptions": {
			"ecmaVersion": "latest"
		},
		"rules": {
			"no-console": 0
		}
	},

	"prettier": {
		"printWidth": 80,
		"useTabs": true,
		"tabWidth": 2,
		"trailingComma": "es5",
		"singleAttributePerLine": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"semi": true
	},

	"nodemonConfig": {
		"watch": ".",
		"ext": ".**",
		"ignore": []
	},

	"gitIgnoreConfig": "https://www.toptal.com/developers/gitignore/api/windows,linux,macos,visualstudiocode,database,react,reactnative,node"
}
