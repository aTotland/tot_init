{
	"scripts": {
		"start": "node ./bin/www",
		"dev": "npx nodemon ./bin/www",
		"debug": "DEBUG=* npx nodemon ./bin/www",
		"upgrade": "npm-check -u && npm audit fix",
		"lint": "npm-run-all \"lint:*\"",
		"lint:js": "eslint .",
		"lint:fix": "eslint --fix .",
		"lint:prettier": "prettier --write .",
		"lint:eslint-docs": "npm run update:eslint-docs -- --check",
		"update:eslint-docs": "eslint-doc-generator",
		"release": "bumpp -r --all --commit=\"release: %s\" --tag=\"%s\""
	},
	"devDependencies": [
		"bumpp",
		"eslint",
		"eslint-config-airbnb",
		"eslint-config-prettier",
		"nodemon",
		"npm-check",
		"npm-run-all",
		"prettier"
	],
	"dependencies": [
		"axios",
		"body-parser",
		"bootstrap",
		"bootstrap-icons",
		"connect-ensure-login",
		"connect-sqlite3",
		"cookie-parser",
		"cookie-session",
		"dotenv",
		"debug",
		"ejs",
		"express",
		"express-session",
		"express-validator",
		"express-rate-limit",
		"fs-extra",
		"http-errors",
		"helmet",
		"morgan",
		"passport",
		"passport-local",
		"pluralize",
		"sqlite3",
		"validator"
	],
	"eslintConfig": {
		"root": true,
		"env": {
			"browser": true,
			"commonjs": true,
			"es2023": true,
			"node": true
		},
		"extends": ["eslint:recommended", "airbnb", "prettier"],
		"parserOptions": {
			"ecmaVersion": "latest"
		},
		"rules": {
			"no-console": 0
		}
	},
	"prettierConfig": {
		"printWidth": 80,
		"useTabs": true,
		"tabWidth": 2,
		"trailingComma": "es5",
		"singleAttributePerLine": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"semi": true
	},
	"nodemonConfig": {
		"watch": ".",
		"ext": ".**",
		"ignore": []
	},
	"gitIgnoreConfig": "https://www.toptal.com/developers/gitignore/api/windows,linux,macos,visualstudiocode,database,react,reactnative,node"
}
