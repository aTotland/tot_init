{
	"name": "tot_init",
	"version": "1.0.10",
	"description": "automating my project initialization",
	"author": "A. Totland",
	"license": "MIT",
	"private": false,
	"main": ".bin/init.js",
	"bin": {
		"tot_init": "bin/init.js"
	},
	"scripts": {
		"upgrade": "npm-check -u && npm audit fix",
		"lint": "npm run lint:fix && npm run prettify",
		"lint:fix": "eslint --fix .",
		"prettify": "prettier --write .",
		"release": "bumpp -r --all --commit=\"release: %s\" --tag=\"%s\""
	},
	"packageManager": "npm@10.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/aTotland/tot_init.git"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"dependencies": {
		"axios": "^1.5.1",
		"fs-extra": "^11.1.1"
	},
	"devDependencies": {
		"bumpp": "^9.2.0",
		"eslint": "^8.50.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^9.0.0",
		"npm-check": "^6.0.1",
		"prettier": "^3.0.3"
	},
	"bugs": {
		"url": "https://github.com/aTotland/tot_init/issues"
	},
	"homepage": "https://github.com/aTotland/tot_init#readme"
}
